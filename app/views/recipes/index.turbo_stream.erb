<%= turbo_stream.append "recipes", partial: "recipes/recipes", locals: { recipes: @recipes } %>
 
<% if @pagination.next.present? %>
  <%= turbo_stream.replace "infinite_scroll",
    partial: "shared/infinite_scroll_frame",
    locals: { 
      resource: recipes_path,
      page: @pagination.next,
    }
  %>
<% end %>